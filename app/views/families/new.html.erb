<div class="container">
  <div class="sub-container shadow bg-white rounded">
    <%= form_with model: @family, local: true do |f| %>
      <!--<= render 'layouts/error_messages', model: f.object %>-->
      <div class="form p-5">
        <div class="form-group row">
          <label for="text" class="col-sm-4 col-form-label">ファミリーネーム</label>
          <%= f.text_field :name, class: "col-sm-8 form-control #{"is-invalid" if f.object.errors.messages[:name].present? }", placeholder: "猫山家、猫の山シェルター" %>
          <div class="invalid-feedback">20文字以内で入力してください。</div>
        </div>
        <div class="form-group row mt-2">
          <label for="text" class="col-sm-4 col-form-label">識別番号(6-12桁)</label>
          <%= f.text_field :family_unique_id, class: "col-sm-8 form-control #{"is-invalid" if f.object.errors.messages[:family_unique_id].present? }", placeholder: "nekoyama22" %>
          <div class="invalid-feedback">6～12桁の半角英数字で入力してください。</div>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "次へ", class: "btn new-submit-button p-2 w-100" %>
      </div>
    <% end %>
  
  </div>
</div>
